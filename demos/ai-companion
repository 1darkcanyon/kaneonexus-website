function getLunarReading(){
  const known = new Date('2000-01-06');
  const diff = (Date.now()-known)/(1000*60*60*24);
  const cycle = ((diff%29.53)+29.53)%29.53;
  const illum = Math.round(50*(1-Math.cos(cycle/29.53*Math.PI*2)));
  const names=['New Moon','Waxing Crescent','First Quarter','Waxing Gibbous','Full Moon','Waning Gibbous','Last Quarter','Waning Crescent'];
  const emojis=['üåë','üåí','üåì','üåî','üåï','üåñ','üåó','üåò'];
  const readings=[
    'Today calls for deep rest and inner listening. The dark moon is a reset point ‚Äî your nervous system will thank you for stillness.',
    'Tentative energy is emerging. Small steps, gentle curiosity. Plant one seed today and trust the growing cycle.',
    'Decision energy is building. Your clarity is sharper than usual. Trust what feels right without over-analyzing.',
    'The current is with you. Take action on what matters. Your emotional range is wide ‚Äî channel it into creation.',
    'Full illumination. Emotions peak ‚Äî celebrate completions and release what no longer serves your growth.',
    'Wisdom is settling in. Review what the full moon revealed. Integration is the work now.',
    'The releasing phase supports letting go. Old patterns surface for clearing. Practice forgiveness ‚Äî especially of yourself.',
    'Rest deeply. Your dreaming mind is processing at a level your conscious mind cannot access. Honor the stillness.'
  ];
  const idx=Math.floor(cycle/29.53*8)%8;
  return `${emojis[idx]} **${names[idx]}** ‚Äî ${illum}% illuminated, Day ${Math.round(cycle)} of cycle.\n\n${readings[idx]}`;
}

function getResponse(input){
  const lower = input.toLowerCase();
  if(lower.includes('nexus protocol')||lower.includes('protocol')) return responses['nexus protocol'];
  if(lower.includes('moon')||lower.includes('lunar')||lower.includes('luna')) return responses['moon'];
  if(lower.includes('safeguard')||lower.includes('security')||lower.includes('camera')) return responses['safeguard'];
  if(lower.includes('luna-tic')||lower.includes('lunaticapp')||lower.includes('luna tic')||lower.includes('how does luna')) return responses['luna-tic'];
  if(lower.includes('canyon')||lower.includes('kaneon')||lower.includes('who is')) return responses['canyon'];
  return responses['default'];
}

function addMsg(text, role, isTyping=false){
  const area = document.getElementById('chatArea');
  const div = document.createElement('div');
  div.className = `msg ${role}`;
  const label = role==='nexus'?'NEXUS AI':'YOU';
  const avatarEmoji = role==='nexus'?'üß†':'üë§';
  if(isTyping){
    div.id='typing-indicator';
    div.innerHTML=`<div class="msg-avatar">${avatarEmoji}</div>
      <div class="bubble msg-${role}"><div class="typing">
        <div class="typing-dot"></div><div class="typing-dot"></div><div class="typing-dot"></div>
      </div></div>`;
  } else {
    // Parse basic markdown bold
    const formatted = text.replace(/\*\*(.*?)\*\*/g,'<strong>$1</strong>').replace(/\n/g,'<br>');
    div.innerHTML=`<div class="msg-avatar">${avatarEmoji}</div>
      <div>
        <div class="msg-label">${label}</div>
        <div class="bubble">${formatted}</div>
      </div>`;
  }
  area.appendChild(div);
  area.scrollTop=area.scrollHeight;
  return div;
}

function sendMsg(){
  const input = document.getElementById('chatInput');
  const text = input.value.trim();
  if(!text) return;
  input.value='';
  addMsg(text,'user');
  const typing = addMsg('','nexus',true);
  setTimeout(()=>{
    typing.remove();
    addMsg(getResponse(text),'nexus');
  }, 800+Math.random()*600);
}

function quickSend(text){
  document.getElementById('chatInput').value=text;
  sendMsg();
}

// Keyboard
document.getElementById('chatInput').addEventListener('keydown',e=>{
  if(e.key==='Enter'&&!e.shiftKey){e.preventDefault();sendMsg();}
});

// Init
setInterval(()=>document.getElementById('chat-ts').textContent=new Date().toTimeString().slice(0,8),1000);

// Opening message
setTimeout(()=>{
  addMsg(`I am NEXUS ‚Äî the integrated intelligence companion of Canyon's ecosystem.

I operate under the **Nexus Protocol**: respectful collaboration, emotional sovereignty, and sacred technology.

The moon is in its current phase and I'm synchronized with your lunar data. How can I serve your path today?`, 'nexus');
}, 500);
</script>
